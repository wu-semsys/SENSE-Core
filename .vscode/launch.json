    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Simple Event Detection Service",
            "type": "debugpy",
            "request": "launch",
            "program": "./simple_event_detection.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--config",
                "./config/monitoring-service.host.json"
            ],
            "cwd": "${workspaceFolder}/sense_core"
        },
        {
            "name": "Python: Data Ingestion",
            "type": "debugpy",
            "request": "launch",
            "program": "./data_ingestion.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--config",
                "./config/data-ingestion.host.json"
            ],
            "cwd": "${workspaceFolder}/sense_core"
        },
        {
            "name": "Python: Knowledgebase Data Import",
            "type": "debugpy",
            "request": "launch",
            "program": "./knowledgebase/data_importer.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--config",
                "./config/knowledgebase.seehub.json"
            ],
            "cwd": "${workspaceFolder}/sense_core"
        },
        {
            "name": "Python Debugger: Semantic Event Log Bridge",
            "type": "debugpy",
            "request": "launch",
            "program": "./semantic_event_log_bridge/semantic_event_log_bridge.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--config",
                "./config/semantic_event_log_bridge.json"
            ],
            "cwd": "${workspaceFolder}/sense_core"
        }
    ]
}
